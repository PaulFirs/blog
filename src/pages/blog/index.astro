---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import Search from '../../components/Search.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Collect all unique tags
const allTags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
---

<Layout title="Blog">
  <SEO 
    title="Blog - All Posts" 
    description="All articles about programming, web development, and technology"
  />
  
  <div class="blog-header">
    <h2>Blog Articles</h2>
    <Search />
  </div>

  <ul class="posts-list">
    {posts.map((post) => (
      <li class="post-item">
        <span class="date">{post.data.date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        })}</span>
        <a href={`/blog/${post.slug}`}>{post.data.title}</a>
      </li>
    ))}
  </ul>

  {allTags.length > 0 && (
    <div class="tags-filter" style="margin-top:2.5rem;">
      <span class="tags-label">Tags:</span>
      <a href="/blog" class="tag active">All</a>
      {allTags.map(tag => (
        <a href={`/blog/tags/${tag}`} class="tag">{tag}</a>
      ))}
    </div>
  )}
</Layout>

<style>
  .blog-header {
    margin-bottom: 0rem;
  }

  .blog-header h1 {
    margin-bottom: 1.5rem;
  }

  .tags-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .tags-label {
    color: var(--color-text-muted);
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .tag {
    padding: 0.4rem 0.8rem;
    background-color: var(--color-primary);
    border: 1px solid rgba(212, 167, 106, 0.3);
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .tag:hover, .tag.active {
    background-color: var(--color-accent);
    color: var(--color-primary);
    border-color: var(--color-accent);
  }

  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    display: flex;
    gap: 0.7rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(212, 167, 106, 0.1);
    align-items: baseline;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .date {
    color: var(--color-text-muted);
    font-size: 1.05rem;
    min-width: 80px;
    flex-shrink: 0;
    margin-right: 0.5rem;
  }

  .post-item a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
    font-size: 1.1rem;
  }

  .post-item a:hover {
    color: var(--color-accent);
  }
</style>
